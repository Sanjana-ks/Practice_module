<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Student List View -->
    <record id="student_list_view" model="ir.ui.view">
        <field name="name">student.list.view</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="mobile"/>
                <field name="degree"/>
                <field name="department_id"/>
                <field name="is_graduated"/>
                <field name="admission"/>
                <field name="currency_id" invisible="1"/>
                <field name="fees"/>
                <field name="student_marks"/>
                <field name="student_subject"/>
            </tree>
        </field>
    </record>

    <!-- Student Form View -->
    <record id="st_form_view" model="ir.ui.view">
        <field name="name">st.form.view</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="4" col="4">
                            <field name="name" placeholder="Enter your name"/>
                            <field name="dob" placeholder="Enter your date of birth"/>
                            <field name="gender" placeholder="Choose your gender"/>
                            <field name="mobile" placeholder="Enter your contact no."/>
                            <field name="degree" placeholder="Select your degree"/>
                            <field name="department_id"/>
                            <field name="is_graduated"/>
                            <field name="admission"/>
                            <field name="currency_id"/>
                            <field name="fees"/>
                    </group>
                    <group>
                        <field name="student_marks"/>
                        <field name="student_subject"/>
                    </group>
                    <group>
                        <field name="document"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Student Action View -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
